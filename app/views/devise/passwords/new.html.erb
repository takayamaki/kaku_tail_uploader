<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'section'}) do |f| %>
  <div class="container">
    <h2 class="title"><%= t('.forgot_your_password') %></h2>
    <% if resource.errors.any? %>
      <div class="message is-danger">
        <div class="message-body">
          <%= devise_error_messages! %>
        </div>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium' %>
    </div>

    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: 'button is-link' %>
    </div>
  </div>
<% end %>
<div class="container">
  <%= render "devise/shared/links" %>
</div>
