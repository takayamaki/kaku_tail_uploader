
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'section'}) do |f| %>
  <div class="container">
    <h2 class="title"><%= t('.sign_up') %></h2>
    <% if resource.errors.any? %>
      <div class="message is-danger">
        <div class="message-body">
          <%= devise_error_messages! %>
        </div>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, autocomplete: "off", class: 'input is-medium' %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input is-medium' %>
    </div>

    <div class="field">
      <%= f.label "#{t('devise.registrations.name')}#{t('devise.registrations.name_hint')}", class: 'label' %>
      <%= f.text_field :name, autocomplete: "nickname", class: 'input is-medium' %>
    </div>

    <div class="actions">
      <%= f.submit t('.sign_up'), class: 'button is-link' %>
    </div>
  </div>
<% end %>

<div class="container">
<%= render "devise/shared/links" %>
</div>