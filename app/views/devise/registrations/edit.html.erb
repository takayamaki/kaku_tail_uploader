
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: 'section'}) do |f| %>
  <div class="container">
    <% if resource.errors.any? %>
      <div class="message is-danger">
        <div class="message-body">
          <%= devise_error_messages! %>
        </div>
      </div>
    <% end %>

    <div class="field">
      <%= f.label t('devise.registrations.name'), class: 'label' %>
      <%= f.text_field :name, autofocus: true, class: 'input is-medium' %>
    </div>

    <div class="field">
      <%= f.label t('devise.registrations.id'), class: 'label' %>
      <%= f.text_field :id, autofocus: true, class: 'input is-medium', readonly: true %>
    </div>

    <div class="field">
      <%= f.label t('devise.registrations.role'), class: 'label' %>
      <%= f.text_field :role, autofocus: true, class: 'input is-medium', readonly: true %>
    </div>

    <div class="field">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'input is-medium' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: 'label' %> 
      <%= f.password_field :password, autocomplete: "off", class: 'input is-medium' %>
      <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
      <% if @minimum_password_length %>        
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input is-medium'  %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: 'label' %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i>
      <%= f.password_field :current_password, autocomplete: "off", class: 'input is-medium'  %>
    </div>

    <div class="actions">
      <%= f.submit t('.update'), class: 'button is-link' %>
    </div>
  </div>
<% end %>
<div class="container">
  <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'button is-danger' %></p>
</div>
