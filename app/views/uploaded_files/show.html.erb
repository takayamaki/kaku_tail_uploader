<div class="container">
  <table class='table is-fullwidth is-striped'>
    <tr>
      <th colspan="2"><%= t('uploaded_files.shared.file_name') %></th>
      <td><%= @uploaded_file.file_name %></td>
    </tr>
    <tr>
      <th colspan="2"><%= t('uploaded_files.shared.created_at') %></th>
      <td><%= l(@uploaded_file.created_at) %></td>
    </tr>
    <tr>
      <th rowspan="4"><%= t('uploaded_files.show.timepoints') %></th>
      <th><%= t('uploaded_files.shared.thumbnail') %></th>
      <td>
        <%= @uploaded_file.thumbnail_sec_part %><%= t('uploaded_files.units.seconds') %>
        <%= @uploaded_file.thumbnail_frame_part %><%= t('uploaded_files.units.frames') %>
      </td>
    </tr>
    <tr>
      <th><%= t('uploaded_files.shared.start_of_15sec') %></th>
      <td>
        <%= @uploaded_file.start_of_15sec_sec_part %><%= t('uploaded_files.units.seconds') %>
        <%= @uploaded_file.start_of_15sec_frame_part %><%= t('uploaded_files.units.frames') %>
      </td>
    </tr>
    <tr>
      <th><%= t('uploaded_files.shared.start_of_30sec') %></th>
      <td>
        <%= @uploaded_file.start_of_30sec_sec_part %><%= t('uploaded_files.units.seconds') %>
        <%= @uploaded_file.start_of_30sec_frame_part %><%= t('uploaded_files.units.frames') %>
      </td>
    </tr>
    <tr>
      <th><%= t('uploaded_files.shared.start_of_60sec') %></th>
      <td>
        <%= @uploaded_file.start_of_60sec_sec_part %><%= t('uploaded_files.units.seconds') %>
        <%= @uploaded_file.start_of_60sec_frame_part %><%= t('uploaded_files.units.frames') %>
      </td>
    </tr>
    <tr>
      <th colspan="2"><%= t('uploaded_files.shared.upload_user') %></th>
      <td><%= @uploaded_file.user.name %></td>
    </tr>
    <tr>
      <th colspan="2"><%= t('uploaded_files.show.file_size') %></th>
      <td><%= @uploaded_file.file_size_by_megabytes %>MB (<%= @uploaded_file.file.size %>Byte)</td>
    </tr>
  </table>
  <%=link_to t('uploaded_files.show.download'), @uploaded_file.file_url, class: 'button is-link'%>
  <% if @can_delete %>
    <%=button_to t('uploaded_files.show.delete'), { :action => "destroy", :id => @uploaded_file.id },
    data: {confirm: t('uploaded_files.show.delete_confirm')}, method: :delete, class: 'button is-danger'%>
  <% end%>
</div>
