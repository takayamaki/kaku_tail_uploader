<%= form_for(@uploaded_file, html: {class: 'section'}) do |f| %>
  <div class="container">
    <%= render partial: 'shared/error_messages', locals: {model: @uploaded_file} %>

    <div class="field">
      <div class="UppyInput"></div>
    </div>
    <div class="UppyInput-Progress"></div>

    <div class="field">
      <%= f.label :comment, class: 'label' %>
      <%= f.text_field :comment, class: 'input is-medium' %>
    </div>

    <%= f.hidden_field :file_name, autofocus: true, class: 'input is-medium' %>
    <%= f.hidden_field :file_data %>

    <div class="actions">
      <%= f.submit t('.upload'), class: 'button is-link' %>
    </div>
  </div>
<% end %>
