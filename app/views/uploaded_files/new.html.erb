<%= form_for(@uploaded_file, html: {class: 'section'}) do |f| %>
  <div class="container">
    <%= render partial: 'shared/error_messages', locals: {model: @uploaded_file} %>

    <div class="field">
      <%= f.label :file_name, class: 'label' %>
      <%= f.text_field :file_name, autofocus: true, class: 'input is-medium' %>
    </div>

    <div class="field">
      <%= f.label :comment, class: 'label' %>
      <%= f.text_field :comment, class: 'input is-medium' %>
    </div>

    <div class="actions">
      <%= f.submit t('.upload'), class: 'button is-link' %>
    </div>
  </div>
<% end %>
