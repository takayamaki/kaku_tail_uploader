<%= form_for(@uploaded_file, html: {class: 'section'},data: {userid: current_user.id}) do |f| %>
  <div class="container">
    <%= render partial: 'shared/error_messages', locals: {model: @uploaded_file} %>

    <div class="container">
      <%= f.label t('uploaded_files.new.select_file'), class: 'label' %>
      <div class="field">
        <div class="FileInput"></div>
        <p>
          <%= t('uploaded_files.new.size_limit')%>
        </p>
        <div class="UppyProgress"></div>
      </div>
    </div>

    <div class="field">
      <%= f.label t('uploaded_files.shared.file_name'), class: 'label' %>
      <%= f.text_field :file_name, class: 'input is-medium', readonly: true %>
    </div>
    <div class="field">
      <%= f.label t('uploaded_files.new.thumbnail'), class: 'label' %>
      <div class="columns">
        <div class="column is-3">
          <%= f.number_field :thumbnail_sec_part, min: 0, class: 'input is-medium', placeholder: '秒', required: true %>
        </div>
        <div class="label is-medium column is-1">
          <%= t('uploaded_files.units.seconds') %>
        </div>
        <div class="column is-3">
          <%= f.number_field :thumbnail_frame_part, min: 0, max:29, class: 'input is-medium', placeholder: 'フレーム(30fps換算)', required: true %>
        </div>
        <div class="column is-2 label is-medium"><%= t('uploaded_files.units.frames') %></div>
      </div>
    </div>
    <div class="field">
      <%= f.label t('uploaded_files.new.start_of_15sec'), class: 'label' %>
      <div class="columns">
        <div class="column is-3">
          <%= f.number_field :start_of_15sec_sec_part, min: 0, class: 'input is-medium', placeholder: '秒', required: true %>
        </div>
        <div class="label is-medium column is-1">
          <%= t('uploaded_files.units.seconds') %>
        </div>
        <div class="column is-3">
          <%= f.number_field :start_of_15sec_frame_part, min: 0, max:29, class: 'input is-medium', placeholder: 'フレーム(30fps換算)', required: true %>
        </div>
        <div class="column is-2 label is-medium"><%= t('uploaded_files.units.frames') %></div>
      </div>
    </div>
    <div class="field">
      <%= f.label t('uploaded_files.new.start_of_30sec'), class: 'label' %>
      <div class="columns">
        <div class="column is-3">
          <%= f.number_field :start_of_30sec_sec_part, min: 0, class: 'input is-medium', placeholder: '秒', required: true %>
        </div>
        <div class="label is-medium column is-1">
          <%= t('uploaded_files.units.seconds') %>
        </div>
        <div class="column is-3">
          <%= f.number_field :start_of_30sec_frame_part, min: 0, max:29, class: 'input is-medium', placeholder: 'フレーム(30fps換算)', required: true %>
        </div>
        <div class="column is-2 label is-medium"><%= t('uploaded_files.units.frames') %></div>
      </div>
    </div>
    <div class="field">
      <%= f.label t('uploaded_files.new.start_of_60sec'), class: 'label' %>
      <div class="columns">
        <div class="column is-3">
          <%= f.number_field :start_of_60sec_sec_part, min: 0, class: 'input is-medium', placeholder: '秒', required: true %>
        </div>
        <div class="label is-medium column is-1">
          <%= t('uploaded_files.units.seconds') %>
        </div>
        <div class="column is-3">
          <%= f.number_field :start_of_60sec_frame_part, min: 0, max:29, class: 'input is-medium', placeholder: 'フレーム(30fps換算)', required: true %>
        </div>
        <div class="column is-2 label is-medium"><%= t('uploaded_files.units.frames') %></div>
      </div>
    </div>

    <div class="field">
      <%= f.label t('uploaded_files.shared.comment'), class: 'label' %>
      <%= f.text_field :comment, class: 'input is-medium' %>
    </div>

    <%= f.hidden_field :file_data %>

    <div class="actions">
      <%= f.submit t('.upload'), class: 'button is-link' %>
    </div>
  </div>
<% end %>
